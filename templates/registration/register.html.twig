{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<main>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<div class="card register">
						<div class="card-header">
							<h1 class="card-title">Inscription</h1>
						</div>
						<div class="card-body">
							{{ form_errors(registrationForm) }}

							{{ form_start(registrationForm) }}
							<div class="form-group">
								{{ form_row(registrationForm.email, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Entrez votre email'
                                    }
                                }) }}
							</div>
							<div class="form-group">
								{{ form_row(registrationForm.plainPassword, {
                                    'label': 'Mot de passe',
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Entrez votre mot de passe'
                                    }
                                }) }}
							</div>
							<div class="form-group form-check">
								{{ form_row(registrationForm.agreeTerms, {
                                    'label_attr': {
                                        'class': 'form-check-label'
                                    },
                                    'attr': {
                                        'class': 'form-check-input'
                                    }
                                }) }}
								<label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">J'ai lu et j'accepte les termes et conditions du service</label>
							</div>

							<button type="submit" class="btn btn-grad">S'inscrire</button>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
